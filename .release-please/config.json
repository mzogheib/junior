{
  "packages": {
    ".": {
      "release-type": "node",
      "changelog-sections": [
        {
          "type": "feat",
          "section": "🚀 Features"
        },
        {
          "type": "fix",
          "section": "🐛 Bug Fixes"
        },
        {
          "type": "build",
          "section": "🛠️ Build"
        },
        {
          "type": "perf",
          "section": "🧰 Miscellaneous"
        },
        {
          "type": "refactor",
          "section": "🧰 Miscellaneous"
        }
      ],
      "pull-request-header": "📦 New release",
      "pull-request-title-pattern": "chore: release v${version}",
      "include-component-in-tag": false
    }
  }
}
