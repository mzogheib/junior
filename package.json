{
  "name": "junior",
  "version": "1.3.0",
  "private": true,
  "homepage": "https://mzogheib.github.io/junior/",
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@fontsource/fredoka-one": "^4.5.7",
    "@fontsource/roboto": "^4.5.7",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.8.5",
    "jotai": "^1.12.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^18.19.50",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@vite-pwa/assets-generator": "^0.2.6",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "eslint-config-prettier": "^8.3.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "2.5.1",
    "stylelint": "^14.3.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "typescript": "^4.5.5",
    "vite": "^6.0.11",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^3.0.4",
    "workbox-core": "^7.3.0",
    "workbox-window": "^7.3.0"
  },
  "overrides": {
    "sharp": "0.32.6",
    "sharp-ico": "0.1.5"
  },
  "scripts": {
    "start": "VITE_APP_GIT_SHA=`git rev-parse --short HEAD` vite",
    "build": "tsc && VITE_APP_GIT_SHA=`git rev-parse --short HEAD` vite build",
    "serve": "VITE_APP_GIT_SHA=`git rev-parse --short HEAD` vite preview",
    "test": "vitest",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "stylelint-check": "stylelint-config-prettier-check",
    "format": "prettier --write --ignore-unknown --ignore-path ./.gitignore"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {},
  "lint-staged": {
    "**/*": "npm run format"
  }
}
